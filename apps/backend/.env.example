# Django Backend Environment Configuration
# Copy this file to .env and update values for your environment

# Security (REQUIRED - change in production!)
SECRET_KEY=changeme-in-production
DEBUG=True

# Allowed hosts (comma-separated, no spaces)
ALLOWED_HOSTS=localhost,127.0.0.1

# Database connection URL
# Format: postgres://user:password@host:port/database
DATABASE_URL=postgres://postgres:postgres@db:5432/nexpat

# Bootstrap superuser (optional - auto-created on first run)
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@example.com
DJANGO_SUPERUSER_PASSWORD=admin123

# CORS configuration for cross-origin requests from frontend
# Add all origins that should be allowed to make requests
CORS_ALLOWED_ORIGINS=http://localhost:3000

# CSRF trusted origins for form submissions
CSRF_TRUSTED_ORIGINS=http://localhost:3000

# Google Drive integration (optional)
GOOGLE_SERVICE_ACCOUNT_FILE=/run/secrets/gdrive_service.json
GDRIVE_FOLDER_ID=

# Logging
DJANGO_LOG_LEVEL=INFO

# Production settings (set these when DEBUG=False)
# ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com
# CORS_ALLOWED_ORIGINS=https://yourdomain.com
# CSRF_TRUSTED_ORIGINS=https://yourdomain.com
# DATABASE_URL=postgres://user:pass@prod-host:5432/prod_db
