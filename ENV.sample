# Django
SECRET_KEY=change_me
DJANGO_DEBUG=false
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,app.example.com
DJANGO_LOG_LEVEL=INFO

# Database (either DATABASE_URL or discrete vars)
DATABASE_URL=postgres://clinicq_user:clinicq_pass@db:5432/clinicq_db
# Alternatively specify discrete Postgres variables. These override the defaults in docker-compose.prod.yml:
POSTGRES_DB=clinicq_db
POSTGRES_USER=clinicq_user
POSTGRES_PASSWORD=clinicq_pass

# Bootstrap superuser (optional)
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@example.com
DJANGO_SUPERUSER_PASSWORD=change_me

# CORS and CSRF (for production)
# Comma-separated list of origins allowed to make cross-origin requests
CORS_ALLOWED_ORIGINS=https://app.example.com
# Comma-separated list of origins trusted for CSRF protection
CSRF_TRUSTED_ORIGINS=https://app.example.com

# Google Drive uploads
GOOGLE_SERVICE_ACCOUNT_FILE=/run/secrets/gdrive_service.json
# Optional: Google Drive folder ID where prescription images will be uploaded
GDRIVE_FOLDER_ID=

# Frontend configuration
# Base URL the frontend will use to contact the backend API in production.
VITE_API_BASE_URL=http://localhost:8000
# Optional: DSN for Sentry error reporting in the frontend.
VITE_SENTRY_DSN=

# Observability (optional)
SENTRY_DSN=